<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <div class="row mt-5">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">1</th>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th>
                        <th>Image</th>
                        <th>Edit</th>
                        <th>Delete</th>
                        
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <th scope="row">1</th>
                        <td>{{this.Name}}</td>
                        <td>{{this.Category}}</td>
                        <td>{{this.Description}}</td>
                        <td>{{this.Price}}</td>
                        <td><img style="height: 50px;width: 50px" src="/product-images/{{this._id}}.jpg" alt="i"></td>
                        <td><a href="admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                        <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('R u sure to delete {{this.Name}}')">Delete</a></td>
                    </tr>
                    {{/each}}
                    
                    
                </tbody>
            </table>
        </div>
    </div>
</section>